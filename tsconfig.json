{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "dom"],
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "isolatedDeclarations": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  }
}
